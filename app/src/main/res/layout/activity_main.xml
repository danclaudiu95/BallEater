<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.dannyetlv.balleater.MainActivity">

    <TextView
        android:id="@+id/sensorID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/scoreLabel"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Score: "
        android:textSize="18sp"
        android:paddingLeft="10dp"
        android:gravity="center_vertical" />
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/startLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to Start"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"/>
        
        <ImageView
            android:id="@+id/box"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:src="@drawable/ball_eater_small"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/red"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@drawable/red_ball_small" />

        <ImageView
            android:id="@+id/yellow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/yellow_ball_small" />

        <ImageView
            android:id="@+id/blue"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/blue_ball_small" />

        <ImageView
            android:id="@+id/bomb"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/bomb_large" />

    </FrameLayout>

</LinearLayout>
